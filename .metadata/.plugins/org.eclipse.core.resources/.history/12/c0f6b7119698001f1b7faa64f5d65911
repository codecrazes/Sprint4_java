package br.com.fiap.main;

import javax.swing.JOptionPane;

import br.com.fiap.model.*;

import java.time.LocalDate;

public class TesteSistema {

    // STRING
    static String texto(String j) {
        return JOptionPane.showInputDialog(j);
    }

    // INTEGER
    static int inteiro(String j) {
        return Integer.parseInt(JOptionPane.showInputDialog(j));
    }

    // DOUBLE
    static double real(String j) {
        return Double.parseDouble(JOptionPane.showInputDialog(j));
    }

    public static boolean bool(String j) {
        String input = JOptionPane.showInputDialog(j).toLowerCase();

        if (input.equals("sim") || input.equals("yes")) {
            return true;
        } else if (input.equals("nao") || input.equals("no")) {
            return false;
        } else {
            return bool("É administrador? (sim/nao)");
        }
    }

    public static void main(String[] args) {
        // INSTANCIAR OBJETOS
        UsuarioAdm objUsuarioAdm = new UsuarioAdm(
                inteiro("Id Usuário:"),
                texto("Nome:"),
                real("Telefone:"),
                texto("Email:"),
                texto("CPF:"),
                texto("Nome de Usuário:"),
                texto("Senha:"),
                new Endereco(
                        inteiro("Id endereço:"),
                        texto("Logradouro:"),
                        inteiro("Número:"),
                        texto("CEP:"),
                        texto("Complemento:"),
                        texto("Bairro:"),
                        texto("cidade:")),
                bool("É administrador? (sim/nao)")
        );

        Carro objCarro = new Carro(
                inteiro("Id modelo:"),
                texto("Nome"),
                texto("Ano:"),
                texto("Fabricante:"),
                texto("Placa:"),
                LocalDate.parse(texto("Data da última revisão (YYYY-MM-DD):")),
                inteiro("Intervalo de revisão (meses):")
        );

       
       


        Oficina objOficina = new Oficina(
                inteiro("Id oficina:"),
                texto("CNPJ:"),
                texto("Razão Social:")
        );

        Servico objServico = new Servico(
                inteiro("Id Serviço:"),
                texto("Nome do serviço prestado:"),
                texto("Descrição:")
        );

        Orcamento objOrcamento = new Orcamento(
                inteiro("Id Orçamento:"),
                texto("Nome Mecânico:"),
                texto("Data de entrada:"),
                texto("Data de Saída:"),
                real("Valor:")
        );

        Agendamento objAgendamento = new Agendamento(
                inteiro("Id Agendamento:"),
                texto("Data:"),
                texto("Hora:"),
                new Endereco(
                        inteiro("Id endereço:"),
                        texto("Logradouro:"),
                        inteiro("Número:"),
                        texto("CEP:"),
                        texto("Complemento:"),
                        texto("Bairro:"),
                        texto("cidade:")
                )
        );

        Avaliacao objAvaliacao = new Avaliacao(
                inteiro("id avaliação:"),
                texto("Descrição:")
        );

        System.out.println(
                objUsuarioAdm.identificar() +
                objUsuarioAdm.toString() +
                objCarro.identificar() +
                objCarro.toString() +
                "\n\nOFICINA" +
                objOficina.toString() +
                "\n\nSERVIÇOS QUE SERÃO PRESTADOS" +
                objServico.toString() +
                "\n\nORÇAMENTO" +
                objOrcamento.toString() +
                "\n\nINFORMAÇÕES DE AGENDAMENTO" +
                objAgendamento.toString() +
                "\n\nAVALIAÇÃO DO USUÁRIO" +
                objAvaliacao.toString()
        );
    }
}
